<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectRoom">

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:text="BT Devices Available"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/stat_permission"
        android:layout_below="@+id/txt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button

            android:textColor="@color/white"
            android:text="F L"
            android:id="@+id/btfl_status"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/btc_status"
            android:layout_width="60dp"
            android:layout_height="wrap_content">
        </Button>

        <Button

            android:textColor="@color/white"
            android:text="C L"
            android:id="@+id/btcl_status"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/btc_status"
            android:layout_width="60dp"
            android:layout_height="wrap_content">
        </Button>

        <Button

            android:textColor="@color/white"
            android:text="C B"
            android:id="@+id/btc_status"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/bta_status"
            android:layout_width="60dp"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:textColor="@color/white"
            android:text="A B"
            android:id="@+id/bta_status"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/bt_status"
            android:layout_width="60dp"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:id="@+id/bt_status"
            android:textColor="@color/white"
            android:text="BT"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>


    <ListView
        android:id="@+id/pairDevUI"
        android:layout_below="@+id/stat_permission"
        android:layout_above="@+id/btn_2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <Button
        android:layout_above="@+id/btn_1"
        android:id="@+id/btn_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Scane Device"></Button>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Stop Scan"></Button>
</RelativeLayout>