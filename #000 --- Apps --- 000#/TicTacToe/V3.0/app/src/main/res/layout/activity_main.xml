<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nameGame"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="--- X &amp; O ---"
        android:textAlignment="center"
        android:textColor="@color/neo"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:textColor="@color/neo"
        android:layout_below="@+id/nameGame"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Strategic Battle of the X's &amp; the O's "
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Player VS Computer - Beginer" />

    <Button
        android:layout_below="@id/startGame"
        android:id="@+id/startGame2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Player VS Computer - Medium " />

    <Button
        android:layout_below="@id/startGame2"
        android:id="@+id/startGame3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Player VS Computer - Advance " />

</RelativeLayout>