<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListRanks">

        <TextView
            android:textColor="@color/bg"
            android:drawableLeft="@drawable/baseline_local_police_24"
            android:drawableTint="@color/bg"
            android:drawablePadding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Ranks"
            android:id="@+id/ttx"
            android:fontFamily="@font/aclonica"
            android:textSize="24dp"></TextView>

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/backExit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_arrow_back_24"></ImageView>




    <ListView
        android:divider="@color/white"
        android:dividerHeight="10dp"
        android:id="@+id/listRanksUI"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ttx"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"></ListView>

</RelativeLayout>